{
  "expo": {
    "name": "omor",
    "slug": "omor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/bg.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/splash.png",
        "backgroundImage": "./assets/home.png"
      },
      "package": "com.omormehn.omor"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/bg.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [ 
        "expo-camera",
        {
          "cameraPermission": "Allow $(Omor social) to access your camera",
          "microphonePermission": "Allow $(Omor social) to access your microphone",
          "recordAudioAndroid": true
        }
	    ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(Omor social) to access your photos.",
          "savePhotosPermission": "Allow $(Omor social) to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.167506380300-6tc90gebcqqpslcgh07os3moqqckis9d"
        }
      ],
      "expo-font",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "8acde320-d332-465a-96ea-9716e0093b9c"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/8acde320-d332-465a-96ea-9716e0093b9c"
    }
  }
}
